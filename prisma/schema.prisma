// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String    @id @default(cuid())
  auth0Sub           String    @unique
  email              String?
  name               String?
  picture            String?
  xApiKey            String?
  xApiSecret         String?
  xAccessToken       String?
  xAccessTokenSecret String?
  creditBalanceCents Int       @default(500) // $5.00 initial free credit
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt

  posts              Post[]
  recurringSchedules RecurringSchedule[]
  knowledgeSources   KnowledgeSource[]
  mediaAssets        MediaAsset[]
  xAccounts          XAccount[]
  usageEvents        UsageEvent[]
  knowledgeImages    KnowledgeImage[]
  creditTransactions CreditTransaction[]
  galleryItems       GalleryItem[]
}

model CronRunEvent {
  id          String   @id @default(cuid())
  jobName     String
  endpoint    String
  method      String   @default("POST")
  success     Boolean
  statusCode  Int?
  durationMs  Int?
  triggeredBy String?  // cloudflare | vercel | manual | unknown
  error       String?
  metadata    String?
  createdAt   DateTime @default(now())

  @@index([jobName, createdAt])
  @@index([success, createdAt])
  @@index([endpoint, createdAt])
}

model Post {
  id          String    @id @default(cuid())
  content     String
  mediaUrls   String?   // JSON array of media URLs
  status      String    @default("scheduled") // draft, scheduled, posted, failed
  scheduledAt DateTime?
  postedAt    DateTime?
  tweetId     String?   // ID returned from X API after posting
  error       String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  mediaAssetId String?
  userId       String?
  xAccountId   String?
  user         User?     @relation(fields: [userId], references: [id])
  xAccount     XAccount? @relation(fields: [xAccountId], references: [id])
}

model RecurringSchedule {
  id          String   @id @default(cuid())
  content     String
  useAi       Boolean  @default(false)
  aiPrompt    String?
  aiLanguage  String?
  frequency   String   // daily, weekly, monthly
  cronExpr    String   // cron expression
  nextRunAt   DateTime
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  userId      String?
  xAccountId  String?
  user        User?    @relation(fields: [userId], references: [id])
  xAccount    XAccount? @relation(fields: [xAccountId], references: [id])
}

model KnowledgeSource {
  id           String    @id @default(cuid())
  url          String
  name         String
  content      String    @default("") // Scraped text content
  pagesScraped Int       @default(1)  // Number of pages scraped
  lastScraped  DateTime?
  isActive     Boolean   @default(true)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  userId       String?
  user         User?     @relation(fields: [userId], references: [id])
  images       KnowledgeImage[]

  @@unique([url, userId])
}

model KnowledgeImage {
  id                String          @id @default(cuid())
  sourceUrl         String
  blobUrl           String
  mimeType          String?
  altText           String?
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt

  userId            String?
  user              User?           @relation(fields: [userId], references: [id])
  knowledgeSourceId String
  knowledgeSource   KnowledgeSource @relation(fields: [knowledgeSourceId], references: [id], onDelete: Cascade)

  @@unique([knowledgeSourceId, sourceUrl])
  @@index([userId, knowledgeSourceId])
}

model MediaAsset {
  id          String   @id @default(cuid())
  sourceUrl   String
  data        Bytes
  mimeType    String   @default("image/jpeg")
  width       Int?
  height      Int?
  altText     String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  userId      String?
  user        User?    @relation(fields: [userId], references: [id])

  @@unique([sourceUrl, userId])
}

model XAccount {
  id                 String   @id @default(cuid())
  label              String?
  username           String?
  isDefault          Boolean  @default(false)
  xApiKey            String
  xApiSecret         String
  xAccessToken       String
  xAccessTokenSecret String
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  userId             String
  user               User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  posts              Post[]
  recurringSchedules RecurringSchedule[]

  @@index([userId, isDefault])
}

model UsageEvent {
  id                String   @id @default(cuid())
  provider          String   @default("openai")
  source            String
  model             String?
  promptTokens      Int      @default(0)
  completionTokens  Int      @default(0)
  totalTokens       Int      @default(0)
  metadata          String?
  createdAt         DateTime @default(now())

  userId            String
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([userId, source, createdAt])
}

model CreditTransaction {
  id              String   @id @default(cuid())
  type            String   // "deduction" | "topup" | "initial"
  amountCents     Int      // positive for top-ups, negative for deductions
  balanceAfter    Int
  description     String?
  stripeSessionId String?
  metadata        String?
  createdAt       DateTime @default(now())

  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([stripeSessionId])
}

model GalleryItem {
  id          String   @id @default(cuid())
  type        String   // "image" | "video"
  modelId     String
  modelLabel  String
  prompt      String
  blobUrl     String   // Vercel Blob permanent URL
  sourceUrl   String   // original WaveSpeed URL
  aspectRatio String?
  mimeType    String   @default("image/jpeg")
  isPublic    Boolean  @default(true)
  createdAt   DateTime @default(now())

  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([isPublic, createdAt])
}
