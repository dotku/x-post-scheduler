// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String    @id @default(cuid())
  auth0Sub           String    @unique
  email              String?
  name               String?
  picture            String?
  xApiKey            String?
  xApiSecret         String?
  xAccessToken       String?
  xAccessTokenSecret String?
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt

  posts              Post[]
  recurringSchedules RecurringSchedule[]
  knowledgeSources   KnowledgeSource[]
  mediaAssets        MediaAsset[]
}

model Post {
  id          String    @id @default(cuid())
  content     String
  mediaUrls   String?   // JSON array of media URLs
  status      String    @default("scheduled") // draft, scheduled, posted, failed
  scheduledAt DateTime?
  postedAt    DateTime?
  tweetId     String?   // ID returned from X API after posting
  error       String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  mediaAssetId String?
  userId       String?
  user         User?     @relation(fields: [userId], references: [id])
}

model RecurringSchedule {
  id          String   @id @default(cuid())
  content     String
  useAi       Boolean  @default(false)
  aiPrompt    String?
  aiLanguage  String?
  frequency   String   // daily, weekly, monthly
  cronExpr    String   // cron expression
  nextRunAt   DateTime
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  userId      String?
  user        User?    @relation(fields: [userId], references: [id])
}

model KnowledgeSource {
  id           String    @id @default(cuid())
  url          String
  name         String
  content      String    @default("") // Scraped text content
  pagesScraped Int       @default(1)  // Number of pages scraped
  lastScraped  DateTime?
  isActive     Boolean   @default(true)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  userId       String?
  user         User?     @relation(fields: [userId], references: [id])

  @@unique([url, userId])
}

model MediaAsset {
  id          String   @id @default(cuid())
  sourceUrl   String
  data        Bytes
  mimeType    String   @default("image/jpeg")
  width       Int?
  height      Int?
  altText     String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  userId      String?
  user        User?    @relation(fields: [userId], references: [id])

  @@unique([sourceUrl, userId])
}
